<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&display=swap"
    rel="stylesheet">

  <link rel="stylesheet" href="css/style.css">
  <link rel="stylesheet" href="css/efeitos.css">

  <link rel="shortcut icon" href="img/bosch2.ico" type="image/x-icon">

  <title>Página Inicial Colaborador</title>
</head>

<body>
  <header>
    <div class="detalhe"></div>
    <nav class="navbar navbar-expand-lg bg-body-tertiary shadow mb-5">
      <div class="container-fluid">
        <img src="img/bosch.ico" alt="IconeBosch" width="165px" height="90px" id="IconeBosch" class="d-none d-md-flex">
        <a class="navbar-brand" href="/" id="title">
          <span2>Processos Seletivos</span2>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01"
          aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <div class="nav-link">
                <input type="checkbox" name="change-theme" id="change-theme">
                <label for="change-theme">
                  <i class="bi bi-sun"></i>
                  <i class="bi bi-moon"></i>
                </label>
              </div>
            </li>
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="HomeCriar" id="criar">Criar</a>
            </li>
            <li class="nav-item">
              <form class="d-flex nav-link" action="/" method="post" role="search">
                <input class="form-control me-2" type="search" name="search" placeholder="Pesquisar Processo"
                  aria-label="Search">
                <button class="btn btn-outline-dark" type="submit" id="btn">Pesquisar</button>
              </form>
            </li>
            <li>
              <form action="/Logout" class="d-flex nav-link" role="search">
                <button class="btn btn-danger" type="submit" id="btn">Logout</button>
              </form>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <div class="row col-10 mx-auto">

    <% for (let i=0; i<processos.length; i++) { %>
      <div class="col-md-4">
        <div class="card">
          <h5 class="card-title">
            <span3>ID: </span3><%= processos[i].IDProcesso %></br>
            <span3>Processo: </span3><%= processos[i].Nome %>
          </h5>
          <!-- <p class="text-center">
            <span3>Situação:</span3>
            <%= processos[i].Situacao=='Aberto' ? 1 : 'Fechado' %>
          </p> -->
          <div class=" col-12 p-1">
            <a href="/Proc/<%= processos[i].IDProcesso %>" class="btn btn-dark col-12">Ver Detalhes</a>
          </div>
          <div class="mx-auto text-center row col-12">
            <div class="col-12 col-lg-6 p-1">
              <a data-bs-toggle="modal" data-bs-target="#JanelaModalApagar" class="btn btn-danger col-12 type="button"
                id="btn">Excluir</a>
            </div>
            <form action="/Download/<%= processos[i].IDProcesso %>" method="post" id="download" class="col-12 col-lg-6 p-1">
              <input class="btn btn-success col-12" type="submit" value="Download">
            </form>
          </div>
        </div>
      </div>
      <div id="JanelaModalApagar" class="modal fade">
        <div class="modal-dialog border-rounded">
          <div class="modal-content strongbg">

            <div class="modal-header border-0">
              <button type="button" class="btn btn-close " data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body rounded">
              <h5 class="text-center mx-auto">Excluir Processso</h5>

              <div class="hide alerta-bom" id="success-apagar">
                <span>Processo Apagado com Sucesso!</span>
                <button id="alertabutton">&times;</button>
              </div>

              <form action="/HomeCol" method="post" id="<%= processos[i].IDProcesso %>">
                <div class="col-6 mx-auto">
                  <label for="edvtrash" class="form-label text-center">
                    <h5>Digite seu EDV para a confirmação</h5>
                  </label>
                  <input class="form-control mx-auto" type="text" id="edvtrash" name="edvtrash">
                </div>
                <div class="col-6 mt-2 mx-auto">
                  <input class= "btn btn-danger mx-auto mt-5 mb-5" type="button" id="apagar" value="EXCLUIR">
                  </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <% } %>

  </div>

  <script src="js/efeitos.js" defer></script>
  <script src="https://code.jquery.com/jquery-3.7.0.js" integrity="sha256-JlqSTELeR4TLqP0OG9dxM7yDPqX1ox/HfgiSLBj8+kM=" crossorigin="anonymous"></script>
  <script src="js/jquery_apagar.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js" integrity="sha384-fbbOQedDUMZZ5KreZpsbe1LCZPVmfTnH7ois6mU1QK+m14rQ1l2bGBq41eYeM/fS" crossorigin="anonymous"></script>
</body>

</html>